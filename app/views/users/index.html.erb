<p 
  style="color: green">
  <% notice %>
</p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        User ID
      </th >
      <th>
        Full Name
      </th >
      <th>
        Category
      </th>
      <th colspan="3">
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <i class="fas fa-bolt">
            <%= user.id %>
          </i>
        </td>
        <td>        
          <%=user.full_name %>        
        </td>
        <td>
          <%= user.category %>
        </td>
        <td>
          <%= link_to('Show', user, class: "btn btn-primary") %>
        </td>
        <td>
          <%= link_to('Edit', edit_user_path(user), class: "btn btn-primary") %>
        </td>
        <td>
          <%= button_to('Destroy', user, class: "btn btn-primary", method: :delete, data: { turbo_confirm: "Are you sure?"}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New user", new_user_path, class: "btn btn-primary" %>
