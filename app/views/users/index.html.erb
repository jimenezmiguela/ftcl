<p style="color: green"><%= notice %>
</p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Full Name
      </th >
      <th>
        Category
      </th>
      <th colspan="3">
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <i class="fas fa-bolt">
            <%= " " + user.full_name %>
          </i>
        </td>
        <td>
          <%= user.category %>
        </td>
        <td>
          <%= link_to('Show', user) %>
        </td>
        <td>
          <%= link_to('Edit', edit_user_path(user)) %>
        </td>
        <td>
          <%= link_to('Destroy', user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

